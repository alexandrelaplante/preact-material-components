{
  "compilerOptions": {
    "outDir": "./esm",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "preserve",
    "reactNamespace": "h",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "rootDir": "./ts/"
  },
  "include": ["./ts/**/*"]
}
